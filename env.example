# Legal Assistant API Configuration - SECURE TEMPLATE
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Authentication (REQUIRED for production)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development  # Change to 'production' for production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=legal_assistant
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# API KEYS (Use environment variables or secrets management)
# =============================================================================

# OpenRouter API Configuration
OPENAI_API_BASE=https://openrouter.ai/api/v1
OPENAI_API_KEY=${OPENAI_API_KEY}  # Set via environment variable

# External Legal Database APIs (Optional)
LEXISNEXIS_API_KEY=${LEXISNEXIS_API_KEY}
LEXISNEXIS_API_ENDPOINT=${LEXISNEXIS_API_ENDPOINT}
WESTLAW_API_KEY=${WESTLAW_API_KEY}
WESTLAW_API_ENDPOINT=${WESTLAW_API_ENDPOINT}

# Congressional and Government APIs
CONGRESS_API_KEY=${CONGRESS_API_KEY}
DATA_GOV_API_KEY=${DATA_GOV_API_KEY}

# Additional Legal Database APIs
COURTLISTENER_API_KEY=${COURTLISTENER_API_KEY}
FEDERAL_REGISTER_API_KEY=${FEDERAL_REGISTER_API_KEY}
NEWSAPI_KEY=${NEWSAPI_KEY}

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Configuration
PORT=8000
HOST=0.0.0.0
APP_REFERER=http://localhost:3000
APP_TITLE=Legal Assistant API

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Immigration Encryption
IMMIGRATION_ENCRYPTION_KEY=${IMMIGRATION_ENCRYPTION_KEY}

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# File Upload Security
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_EXTENSIONS=.pdf,.txt,.docx,.doc,.rtf,.odt

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# External API Timeouts
EXTERNAL_API_TIMEOUT=5
EXTERNAL_SEARCH_TIMEOUT=10
MAX_CONCURRENT_APIS=3
ENABLE_API_CACHING=true

# Database Connection Pooling
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1
REDIS_MAX_CONNECTIONS=20

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/legal_assistant.log
ENABLE_SECURITY_LOGGING=true

# Monitoring
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Feature Flags
GOOGLE_SCHOLAR_ENABLED=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=false

